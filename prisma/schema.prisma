generator client {
  provider = "prisma-client-js"
  //output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    email String @unique @db.VarChar(320)
    phoneNumber String? @unique @db.VarChar(15) @map("phone_number")
    password String @db.VarChar(60)
    firstName String @db.VarChar(30) @map("first_name")
    lastName String @db.VarChar(30) @map("last_name")
    role Role @default(user)
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    sessions Session[]
    files File[]
    @@map("users")
}

model Session {
    id Int @id @default(autoincrement())
    user Int @map("user")
    isValid Boolean @default(true) @map("is_valid")
    userClient String? @map("user_client")
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    userRef User @relation(fields: [user], references: [id])
    @@map("sessions")
}

enum Role {
    user
    admin
}

model File {
    id Int @id @default(autoincrement())
    filename String @db.VarChar(255)
    mimeType String @db.VarChar(127) @map("mime_type")
    size BigInt
    path String @db.VarChar(512)
    user Int
    uploadedAt DateTime @default(now()) @map("uploaded_at")
    
    userRef User @relation(fields: [user], references: [id])
    
    @@index([user])
    @@map("files")
}